    <script>
      document.addEventListener("DOMContentLoaded", function() {
          var elements = document.querySelectorAll(".hidden");
          elements.forEach(function(element) {
              element.classList.add("fade-in");
              element.classList.remove("hidden");
          });
      });
  </script>
